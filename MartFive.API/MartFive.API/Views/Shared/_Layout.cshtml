                        <div class="col-lg-4">
                            <div class="single-footer-widget">
                                <h3>Instagram</h3>
                                <div class="instagram-image">
                                    <div class="single-insta-img">
                                        <a><img src="@Url.Content("~/Content/")assets/img/instagram/1.jpg" alt=""></a>
                                    </div>
