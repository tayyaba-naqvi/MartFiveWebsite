</head>

<body>
    <header class="header-area header-four-area header-sticky">
        <div class="header-container">
            <div class="row">
                <div class="col-lg-2 col-sm-4">
                    <div class="logo text-center">
                        <a href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Content/")assets/img/logo/logo0.png" alt="MartFive"></a>
                    </div>
                </div>
                <div class="col-lg-8 display-none-md display-none-xs">
                    <div class="ht-main-menu">
                        <nav class="d-flex justify-content-center">
                            <ul>
                                <li class="active">
                                    <a href="@Url.Action("Index","Home")">Home</a>
                                </li>
                                <li>
                                    <a href="#">Categories <i class="fa fa-angle-down"></i></a>
                                    <ul class="ht-mega-menu">
                                        <li>
                                            <ul>
                                                <li><a href="@Url.Action("Category","Home")">Fruits & Vegetables</a></li>
                                                <li><img src="@Url.Content("~/Content/")assets/img/banner/fruits.jpg" alt=""></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <ul>
                                                <li><a href="@Url.Action("Category","Home")">Household Needs</a></li>
                                                <li><img src="@Url.Content("~/Content/")assets/img/banner/Household-Needs.png" alt=""></li>
                                            </ul>
                                        </li>

                                    </ul>
                                </li>

                                <li><a href="@Url.Action("Contact","Home")">Contact Us</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="col-lg-2 col-sm-8">
                    <div class="header-content d-flex justify-content-end">
                        <div class="search-wrapper">
                            <a href="#"><span class="icon icon-Search"></span></a>
                            <form action="#" class="search-form">
                                <input type="text" placeholder="Search entire store here ...">
                                <button type="button">Search</button>
                            </form>
                        </div>
                        <div class="settings-wrapper">
                            <a href="#"><i class="icon icon-Settings"></i></a>
                            <div class="settings-content">
                                <h4>My Account <i class="fa fa-angle-down"></i></h4>
                                <ul>
                                    <li><a href="#" class="modal-view button" data-toggle="modal" data-target="#register_box">Register</a></li>
                                    <li><a href="#" class="modal-view button" data-toggle="modal" data-target="#login_box">Login</a></li>
                                </ul>
                                <h4>Currency: Ruppees <i class="fa fa-angle-down"></i></h4>

                                <h4>Language: English/Urdu <i class="fa fa-angle-down"></i></h4>
                                <ul>
                                    <li>
                                        <a href="#"><img src="@Url.Content("~/Content/")assets/img/icon/flag-1.png" alt="">English</a>
                                    </li>
                                    <li>
                                        <a href="#"><img src="@Url.Content("~/Content/")assets/img/icon/flag-1.png" alt="">Urdu</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="cart-wrapper">
                            <a href="#">
                                <i class="icon icon-FullShoppingCart"></i>
                                <span>2</span>
                            </a>
                            <div class="cart-item-wrapper">
                                <div class="single-cart-item">
                                    <div class="cart-img">
                                        <a href="@Url.Action("MyCart","Home")"><img src="@Url.Content("~/Content/")assets/img/cart/1.jpg" alt=""></a>
                                    </div>
                                    <div class="cart-text-btn">
                                        <div class="cart-text">
                                            <h5><a href="@Url.Action("MyCart","Home")">Red Capsicum</a></h5>
                                            <span class="cart-qty">×1</span>
                                            <span class="cart-price">Rs.120.00</span>
                                        </div>
                                        <button type="button"><i class="fa fa-close"></i></button>
                                    </div>
                                </div>
                                <div class="single-cart-item">
                                    <div class="cart-img">
                                        <a href="@Url.Action("MyCart","Home")"><img src="@Url.Content("~/Content/")assets/img/cart/2.jpg" alt=""></a>
                                    </div>
                                    <div class="cart-text-btn">
                                        <div class="cart-text">
                                            <h5><a href="@Url.Action("MyCart","Home")">Rippen Mango</a></h5>
                                            <span class="cart-qty">×1</span>
                                            <span class="cart-price">Rs.328.00</span>
                                        </div>
                                        <button type="button"><i class="fa fa-close"></i></button>
                                    </div>
                                </div>
                                <div class="cart-price-total">
                                    <div class="cart-price-info d-flex justify-content-between">
                                        <span>Sub-Total :</span>
                                        <span>Rs.448.00</span>
                                    </div>
                                    <div class="cart-price-info d-flex justify-content-between">
                                        <span>Shipping Charges :</span>
                                        <span>Rs.110.00</span>
                                    </div>
                                    <div class="cart-price-info d-flex justify-content-between">
                                        <span>Total :</span>
                                        <span>Rs.548.00</span>
                                    </div>
                                </div>
                                <div class="cart-links">
                                    <a href="@Url.Action("MyCart","Home")">Show Cart</a>
                                    <a href="@Url.Action("Checkout","Home")">Checkout</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header Area End -->
        <!-- Mobile Menu Area Start -->
        <div class="mobile-menu-area">
            <div class="mobile-menu container">
                <nav id="mobile-menu-active">
                    <ul class="menu-overflow">
                        <li>
                            <a href="@Url.Action("Index","Home")">HOME</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Category","Home")">Categories <i class="fa fa-angle-down"></i></a>
                            <ul class="ht-mega-menu">
                                <li><a href="@Url.Action("Category","Home")">Fruits and Vegetables</a></li>
                                <li><a href="@Url.Action("Category","Home")">Household Needs</a></li>

                            </ul>
                        </li>

                        <li><a href="@Url.Action("Contact","Home")">Contact Us</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <!-- Mobile Menu Area End -->
        <!--Start of Login Form-->
        <div class="modal fade" id="login_box" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="fa fa-close"></i></span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-pop-up-content">
                            <h2>Login to your account</h2>
                            <form action="#" method="post">
                                <div class="form-box">
                                    <input type="text" placeholder="User Name" name="username">
                                    <input type="password" placeholder="Password" name="pass">
                                </div>
                                <div class="checkobx-link">
                                    <div class="left-col">
                                        <input type="checkbox" id="remember_me"><label for="remember_me">Remember Me</label>
                                    </div>
                                    <div class="right-col"><a href="@Url.Action("ForgetPassword","Home")">Forget Password?</a></div>
                                </div>
                                <a href="@Url.Action("Index","Home")" class="default-btn large circle blue hover-blue uppercase">Sign In</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--End of Login Form-->
        <!--Start of Register Form-->
        <div class="modal fade" id="register_box" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="fa fa-close"></i></span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-pop-up-content">
                            <h2>Sign Up</h2>
                            <form action="#" method="post">
                                <div class="form-box">
                                    <input type="text" placeholder="First Name" name="firstname">
                                    <input type="text" placeholder="Last Name" name="lastname">
                                    <input type="email" placeholder="Email" name="email">
                                    <input type="password" placeholder="Password" name="pass">
                                    <input type="password" placeholder="Confirm Password" name="re_pass">
                                </div>
                                <a href="@Url.Action("Index","Home")" class="default-btn large circle blue hover-blue uppercase">Register</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--End of Register Form-->
    </header>

    <div>
        @RenderBody();
    </div>
    <footer class="footer-area footer-style-two">
        <!-- Footer Top Area Start -->
        <div class="footer-top bg-9 pb-100 pb-80">
            <!-- Newsletter Area Start -->
            <div class="newsletter-area newsletter-syle-two">
                <div class="container text-center">
                    <div class="newsletter-container pt-105">
                        <h2>Subscribe Newsletter.</h2>
                        <p>Get e-mail updates about our latest shop and special offers.</p>
                        <div class="newsletter-form mc_embed_signup">
                            <form action="#" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                                <div id="mc_embed_signup_scroll" class="mc-form">
                                    <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="Enter you email address here..." required>
                                    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                    <div class="mc-news" aria-hidden="true"><input type="text" name="b_6bbb9b6f5827bd842d9640c82_05d85f18ef" tabindex="-1" value=""></div>
                                    <button id="mc-embedded-subscribe" type="button" name="subscribe" class="default-btn">Subscribe</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="social-icon">
                        <a><i class="fa fa-twitter"></i></a>
                        <a><i class="fa fa-google-plus"></i></a>
                        <a><i class="fa fa-facebook"></i></a>
                        <a><i class="fa fa-youtube"></i></a>
                        <a><i class="fa fa-flickr"></i></a>
                    </div>
                </div>
            </div>
            <!-- Newsletter Area End -->
            <!-- Service Area Start -->
            <div class="service-area pt-50">
                <div class="container">
                    <div class="service-container">
                        <div class="service-content">
                            <div class="row">
                                <div class="col-lg-4 col-md-4">
                                    <div class="single-service">
                                        <div class="service-image">
                                            <img src="@Url.Content("~/Content/")assets/img/icon/rocket-golden.png" alt="">
                                        </div>
                                        <div class="service-text">
                                            <h3>Same/Next Day Delivery</h3>
                                            <p>Free delivery on all orders over Rs. 1,000</p>
                                            <p>Rs 100 for orders below Rs 1000</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="single-service">
                                        <div class="service-image">
                                            <img src="@Url.Content("~/Content/")assets/img/icon/money-golden.png" alt="">
                                        </div>
                                        <div class="service-text">
                                            <h3>Cash on Delivery</h3>
                                            <p>You pay when rider comes at your address.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="single-service">
                                        <div class="service-image">
                                            <img src="@Url.Content("~/Content/")assets/img/icon/support-golden.png" alt="">
                                        </div>
                                        <div class="service-text">
                                            <h3>Online support</h3>
                                            <p>Customer support from 9AM - Midnight</p>
                                            <p>(+92)332 457 3440</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Service Area End -->
            <!-- Footer Widget Area Start -->
            <div class="footer-widget-area">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4 col-md-6">
                            <div class="single-footer-widget">
                                <div class="footer-logo">
                                    <a><img src="@Url.Content("~/Content/")assets/img/logo/logo0.png" alt=""></a>
                                </div>
                                <div class="footer-text">
                                    <span><i class="icon icon-Phone"></i>Phone : +(1234) 567 890</span>
                                    <span><i class="icon icon-Mail"></i>Email : <a href="mailto:customer@martfive.com">customer@martfive.com</a></span>
                                    <span><i class="icon icon-Pointer"></i>Working Days/Hours : Mon - Sun / 9:00AM - 9:00PM</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3">
                        </div>

                        <div class="col-lg-2 col-md-3">
                            <div class="single-footer-widget">
                                <h3>Our company</h3>
                                <ul class="footer-widget-list">
                                    <li><a href="@Url.Action("AboutUs","Home")">About Us</a></li>
                                    <li><a href="@Url.Action("Delivery","Home")">Delivery</a></li>
                                    <li><a href="@Url.Action("TermsAndConditions","Home")">Terms and Conditions</a></li>
                                    <li><a href="@Url.Action("PrivacyPolicy","Home")">Privacy Policy</a></li>
                                    <li><a href="@Url.Action("SecurePayment","Home")">Secure payment</a></li>
                                    <li><a href="@Url.Action("Contact","Home")">Contact Us</a></li>
                                </ul>
