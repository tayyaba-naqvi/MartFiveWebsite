<!doctype html>
<html class="no-js" lang="en">

<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/")assets/img/logo.jpg">

    <!-- All css here -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/")assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/")assets/css/ie7.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/")assets/css/plugins.css">
