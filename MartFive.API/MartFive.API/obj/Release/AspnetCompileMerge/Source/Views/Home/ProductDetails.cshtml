                <script>
                    $(function () {
                        $("#addToCartFormBtn").on('click', function () {
                            alert("sdsdsd")
                            $("#submitInput").click();
                        });

                        $("#addToCartForm").on("submit", function () {

                            alert($("#user_id_span").text())
                            alert($("input[name = User_Id]").val())
                            alert($("input[name = Item_Id]").val())

                            return false;

                            $.post('@Url.Action("AddToCartAjax","Home")', {
                                "Cart_Quantity": $("input[name = Cart_Quantity]").val(),
                                "User_Id": $("input[name = User_Id]").val(),
                                "Item_Id": $("input[name = Item_Id]").val()
                            }, function (data, status) {

                                alert(data);


                            })

                            return false;
                        });

                    });
                </script>    
        }
    </body>
