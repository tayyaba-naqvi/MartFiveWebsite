@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}


    <body>
        @{
            var itemAttr = ViewBag.item;
        }
        <!-- Header Area Start -->
        <!-- Header Area End -->
        <!-- Breadcrumb Area Start -->
        <div class="breadcrumb-area bg-12 text-center">
            <div class="container">
                <h1>Product Details</h1>
                <nav aria-label="breadcrumb">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Shop","Home")">Shop</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Product Details</li>
                    </ul>
                </nav>
            </div>
        </div>
        <!-- Breadcrumb Area End -->
        <!-- Product DEtails Area Start -->
        <div class="product-detials-area bg-gray pt-110">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 col-md-5">
                        <div class="product-image-slider d-flex flex-column">
                            <!--Product Tab Content Start-->
                            <div class="tab-content product-large-image-list">
                                <div class="tab-pane fade show active" id="product-slide1" role="tabpanel" aria-labelledby="product-slide-tab-1">
                                    <div class="single-product-img easyzoom img-full">
                                        <a href="@Url.Content("~/Content/")assets/img/product/@ViewBag.pic.Pic_Name"><img src="@Url.Content("~/Content/")assets/img/product/@ViewBag.pic.Pic_Name" class="img-fluid" alt=""></a>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="product-slide2" role="tabpanel" aria-labelledby="product-slide-tab-2">
                                    <div class="single-product-img easyzoom img-full">
                                        <a href="@Url.Content("~/Content/")assets/img/product/1.jpg"><img src="@Url.Content("~/Content/")assets/img/product/1.jpg" class="img-fluid" alt=""></a>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="product-slide3" role="tabpanel" aria-labelledby="product-slide-tab-3">
                                    <div class="single-product-img easyzoom img-full">
                                        <a href="@Url.Content("~/Content/")assets/img/product/4.jpg"><img src="@Url.Content("~/Content/")assets/img/product/4.jpg" class="img-fluid" alt=""></a>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="product-slide4" role="tabpanel" aria-labelledby="product-slide-tab-4">
                                    <div class="single-product-img easyzoom img-full">
                                        <a href="@Url.Content("~/Content/")assets/img/product/13.jpg"><img src="@Url.Content("~/Content/")assets/img/product/13.jpg" class="img-fluid" alt=""></a>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="product-slide5" role="tabpanel" aria-labelledby="product-slide-tab-5">
                                    <div class="single-product-img easyzoom img-full">
                                        <a href="@Url.Content("~/Content/")assets/img/product/18.jpg"><img src="@Url.Content("~/Content/")assets/img/product/18.jpg" class="img-fluid" alt=""></a>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="product-slide6" role="tabpanel" aria-labelledby="product-slide-tab-6">
                                    <div class="single-product-img easyzoom img-full">
                                        <a href="@Url.Content("~/Content/")assets/img/product/19.jpg"><img src="@Url.Content("~/Content/")assets/img/product/19.jpg" class="img-fluid" alt=""></a>
                                    </div>
                                </div>
                            </div>
                            
                            <!--Product Tab Menu End-->
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-7">
                        <div class="product-details-text">
                            <h3>@itemAttr.Item_Name</h3>
                            <div class="p-rating-review">
                                <div class="product-rating">
                                    <i class="fa fa-star-o color"></i>
                                    <i class="fa fa-star-o color"></i>
                                    <i class="fa fa-star-o color"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                                <a href="#" class="scroll-down">(2 customer reviews)</a>
                            </div>
                            <h4>Rs.@itemAttr.Item_Price.00<span>Rs.74.00</span></h4>
                            <p>@itemAttr.Item_Description</p>
                            <h5><i class="fa fa-check"></i>150 in stock</h5>
                            <form action="#" method="post" id="addToCartForm">
                                <div class="add-cart-product">
                                        
                                        <input type="hidden" name="Item_id" value="@itemAttr.Item_Id" />
                                        <input type="number" name="Cart_Quantity" placeholder="1" value="1">
                                        <input type="submit" hidden id="submitInput" value="Add to cart"/>
                                        <button id="addToCartFormBtn" type="button" class="default-btn">Add to cart</button>

                                </div>
                                <div class="product-tag-cat">
                                    <div class="single-tag-cat">
                                        <span class="p-d-title">Categories:</span>
                                        <a>Fruits &amp; Household needs</a>

                                    </div>  
                                </div>
                                <div class="product-share">
                                    <span class="p-d-title">Share this product</span>
                                    <ul class="p-social-links">
                                        <li><a><i class="fa fa-facebook"></i></a></li>
                                        <li><a><i class="fa fa-twitter"></i></a></li>
                                        <li><a><i class="fa fa-pinterest"></i></a></li>
                                        <li><a><i class="fa fa-google"></i></a></li>
                                        <li><a><i class="fa fa-linkedin"></i></a></li>
                                    </ul>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Product DEtails Area End -->
        <!-- Product Review Tab Area Start -->
        <div class="product-review-tab-area bg-gray pt-90 pb-105">
            <div class="container scroll-area">
                <div class="p-d-tab-container">
                    <div class="p-tab-btn">
                        <div class="nav" role="tablist">
                            <a class="active" href="#tab1" data-toggle="tab" role="tab" aria-selected="true" aria-controls="tab1">Description</a>
                            <a href="#tab2" data-toggle="tab" role="tab" aria-selected="false" aria-controls="tab2">Reviews (2)</a>
                        </div>
                    </div>
                    <div class="p-d-tab tab-content">
                        <div class="tab-pane active show fade" id="tab1" role="tabpanel">
                            <div class="tab-items">
                                <div class="product-desc-text">
                                    <p>@itemAttr.Item_Description</p>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade scroll-area" id="tab2" role="tabpanel">
                            <div class="tab-items">
                                <div class="p-review-wrapper">
                                    <h3>Reviews for this product:</h3>
                                    <div class="single-review-item">
                                        <div class="review-logo">
                                            <img src="@Url.Content("~/Content/")assets/img/icon/logo.jpg" alt="">
                                        </div>
                                        <div class="p-review-text">
                                            <div class="rating-number">
                                                <i class="fa fa-star color"></i>
                                                <i class="fa fa-star color"></i>
                                                <i class="fa fa-star color"></i>
                                                <i class="fa fa-star color"></i>
                                                <i class="fa fa-star color"></i>
                                            </div>
                                            <span class="p-review-info"><span>Dniyal</span> – March 23, 2019</span>
                                            <p>Good job. Got the food delievered in fresh form.</p>
                                        </div>
                                    </div>
                                    <div class="single-review-item">
                                        <div class="review-logo">
                                            <img src="@Url.Content("~/Content/")assets/img/icon/logo.jpg" alt="">
                                        </div>
                                        <div class="p-review-text">
                                            <div class="rating-number">
                                                <i class="fa fa-star color"></i>
                                                <i class="fa fa-star color"></i>
                                                <i class="fa fa-star color"></i>
                                                <i class="fa fa-star color"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <span class="p-review-info"><span>Adnan</span> – December 2, 2018</span>
                                            <p>Very fresh and sweet food.</p>
                                        </div>
                                    </div>
                                </div>
                                <form action="#" method="post" class="rating-form">
                                    <h5>Add your rating</h5>
                                    <div class="submit-rating">
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                    </div>
                                    <label for="r-textarea">Your Review</label>
                                    <textarea name="review" id="r-textarea" cols="30" rows="10"></textarea>
                                    <label for="r-name">Name *</label>
                                    <input type="text" placeholder="" id="r-name">
                                    <label for="r-email">Email *</label>
                                    <input type="email" placeholder="" id="r-email">
                                    <button type="button" class="default-btn">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Product Review Tab Area End -->
        <!-- Protuct Area Start -->
        <!-- Protuct Area End -->
        <!-- Footer Area Start -->
        <!-- Footer Area End -->
        <!-- QUICKVIEW PRODUCT -->
        <!-- END QUICKVIEW PRODUCT -->
        <!-- All js here -->
        <script src="@Url.Content("~/Content/")assets/js/vendor/jquery-3.2.1.min.js"></script>
        <script src="@Url.Content("~/Content/")assets/js/popper.min.js"></script>
        <script src="@Url.Content("~/Content/")assets/js/bootstrap.min.js"></script>
        <script src="@Url.Content("~/Content/")assets/js/plugins.js"></script>
        <script src="@Url.Content("~/Content/")assets/js/ajax-mail.js"></script>
        <script src="@Url.Content("~/Content/")assets/js/main.js"></script>
